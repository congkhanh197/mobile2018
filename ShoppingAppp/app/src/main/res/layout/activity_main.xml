<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thoithanh.shoppingappp.MainActivity"
    android:background="@drawable/dl_background">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/dl_cage" />

        <ImageButton
            android:id="@+id/bLogin"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/dl_btn_login" />

        <ImageButton
            android:id="@+id/bCreateNewId"
            android:layout_width="52dp"
            android:layout_height="7dp"
            android:layout_above="@+id/bLogin"
            android:layout_alignEnd="@+id/bLogin"
            android:layout_alignRight="@+id/bLogin"
            android:layout_marginBottom="19dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/dl_btn_create_new_id" />

        <ImageButton
            android:id="@+id/bForgotPassword"
            android:layout_width="45dp"
            android:layout_height="9dp"

            android:layout_alignLeft="@+id/bLogin"
            android:layout_alignStart="@+id/bLogin"
            android:layout_alignTop="@+id/bCreateNewId"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/dl_btn_forgot_password" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etPassword"
            android:layout_alignLeft="@+id/bLogin"
            android:layout_alignStart="@+id/bLogin"
            android:layout_marginBottom="27dp"
            android:backgroundTint="@android:color/transparent"
            android:ems="5"
            android:hint="User ID"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bCreateNewId"
            android:layout_alignLeft="@+id/etFirstName"
            android:layout_alignStart="@+id/etFirstName"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@android:color/transparent"
            android:ems="5"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="10sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dl_title" />


</android.support.constraint.ConstraintLayout>
